<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@drawable/home_top_bg"
        >
        <ImageButton
            android:id="@+id/call_record_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width75"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width35"
            android:background="@drawable/top_back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width80"
            android:layout_width="@dimen/width500"
            android:layout_height="@dimen/width580">
            <ListView
                android:id="@+id/record_contents"
                android:layout_width="@dimen/width480"
                android:layout_height="@dimen/width550"></ListView>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/width650"
            android:layout_height="@dimen/width550"/>
    </LinearLayout>
</LinearLayout>

