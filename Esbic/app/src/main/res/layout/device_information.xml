<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width100">
            <ImageButton
                android:id="@+id/device_information_back"
                android:layout_gravity="center"
                android:layout_width="@dimen/width80"
                android:layout_height="@dimen/width80"
                android:background="@drawable/back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sn"
                android:layout_gravity="center"
                android:layout_width="@dimen/width900"
                android:layout_height="@dimen/width70"
                android:layout_marginTop="@dimen/width10"
                android:gravity="center"
                android:background="@drawable/project_set_1"/>
            <TextView
                android:id="@+id/mac"
                android:layout_gravity="center"
                android:layout_width="@dimen/width900"
                android:layout_height="@dimen/width70"
                android:layout_marginTop="@dimen/width10"
                android:gravity="center"
                android:background="@drawable/project_set_1"/>
            <TextView
                android:id="@+id/plc_mac"
                android:layout_gravity="center"
                android:layout_width="@dimen/width900"
                android:layout_height="@dimen/width70"
                android:layout_marginTop="@dimen/width10"
                android:gravity="center"
                android:background="@drawable/project_set_1"/>
            <TextView
                android:id="@+id/software_version"
                android:layout_gravity="center"
                android:layout_width="@dimen/width900"
                android:layout_height="@dimen/width70"
                android:layout_marginTop="@dimen/width10"
                android:gravity="center"
                android:background="@drawable/project_set_1"/>
            <TextView
                android:id="@+id/hardware_version"
                android:layout_gravity="center"
                android:layout_width="@dimen/width900"
                android:layout_height="@dimen/width70"
                android:layout_marginTop="@dimen/width10"
                android:gravity="center"
                android:background="@drawable/project_set_1"/>

        </LinearLayout>



</LinearLayout>