<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width680"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/title_back"
            android:layout_gravity="center"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width65" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width60"
            android:layout_marginTop="@dimen/width25"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请输入密码"
            android:textSize="@dimen/textsize35"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/width830"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/width430"
                android:layout_height="@dimen/width100"
                android:layout_marginTop="@dimen/width25"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/num_one"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width110"
                    android:layout_height="@dimen/width80"
                    android:text="0"
                    android:textSize="@dimen/textsize30"/>
                <TextView
                    android:id="@+id/num_two"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width110"
                    android:layout_height="@dimen/width80"
                    android:text="0"
                    android:textSize="@dimen/textsize30"/>
                <TextView
                    android:id="@+id/num_three"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width110"
                    android:layout_height="@dimen/width80"
                    android:text="0"
                    android:textSize="@dimen/textsize30"/>
                <TextView
                    android:id="@+id/num_four"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width110"
                    android:layout_height="@dimen/width80"
                    android:text="0"
                    android:textSize="@dimen/textsize30"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/width400"
                android:layout_height="@dimen/width460"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/width25"
                android:orientation="vertical">
                <GridView
                    android:id="@+id/input_keyboard"
                    android:layout_gravity="center"
                    android:numColumns="3"
                    android:horizontalSpacing="@dimen/width30"
                    android:verticalSpacing="@dimen/width20"
                    android:layout_width="@dimen/width400"
                    android:layout_height="@dimen/width460"></GridView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>