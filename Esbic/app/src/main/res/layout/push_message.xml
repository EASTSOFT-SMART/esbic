<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/width800"
        android:layout_height="@dimen/width300"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/push_image"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width100"
            android:layout_width="@dimen/width260"
            android:layout_height="@dimen/width260"
            android:background="@drawable/push_message"/>

        <TextView
            android:id="@+id/push_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/width100"
            android:layout_width="@dimen/width260"
            android:layout_height="@dimen/width260"
            android:text="明天降温有大雪，请注意保暖!"
            android:textSize="@dimen/textsize35"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/width800"
        android:layout_height="@dimen/width100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/push_num_one"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/textsize30"
            android:layout_marginLeft="@dimen/width25"
            android:layout_width="@dimen/width150"
            android:layout_height="@dimen/width100"
            android:text="0"/>
        <TextView
            android:id="@+id/push_num_two"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/textsize30"
            android:layout_marginLeft="@dimen/width50"
            android:layout_width="@dimen/width150"
            android:layout_height="@dimen/width100"
            android:text="0"/>
        <TextView
            android:id="@+id/push_num_three"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize30"
            android:layout_marginLeft="@dimen/width50"
            android:layout_width="@dimen/width150"
            android:layout_height="@dimen/width100"
            android:text="0"/>
        <TextView
            android:id="@+id/push_num_four"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize30"
            android:layout_width="@dimen/width150"
            android:layout_height="@dimen/width100"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/width550"
        android:layout_height="@dimen/width300">
        <GridView
            android:id="@+id/push_input_keyboard"
            android:layout_width="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/width10"
            android:verticalSpacing="@dimen/width10"
            android:layout_height="match_parent"></GridView>
    </LinearLayout>
</LinearLayout>