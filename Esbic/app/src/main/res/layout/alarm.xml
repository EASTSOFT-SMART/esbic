<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    >


    <LinearLayout
        android:layout_width="@dimen/width1046"
        android:layout_height="@dimen/width567"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_2">

        <LinearLayout
            android:layout_width="@dimen/width523"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alarm_icon"
                android:layout_width="@dimen/width212"
                android:layout_height="@dimen/width186"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/width74"
                android:background="@drawable/alarm_fire"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="请输入密码"
                    android:layout_marginTop="@dimen/width70"
                    android:textSize="@dimen/width35"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width57"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/width16"
                    >
                    <TextView
                        android:id="@+id/alarm_num_one"
                        android:textSize="@dimen/width40"
                        android:layout_width="@dimen/width57"
                        android:layout_height="@dimen/width57"
                        android:gravity="center"
                        android:password="true"
                        android:background="@drawable/input_box_2"/>
                    <TextView
                        android:id="@+id/alarm_num_two"
                        android:textSize="@dimen/width40"
                        android:layout_marginLeft="@dimen/width16"
                        android:gravity="center"
                        android:password="true"
                        android:layout_width="@dimen/width57"
                        android:layout_height="@dimen/width57"
                        android:background="@drawable/input_box_2"/>
                    <TextView
                        android:id="@+id/alarm_num_three"
                        android:textSize="@dimen/width40"
                        android:gravity="center"
                        android:password="true"
                        android:layout_marginLeft="@dimen/width16"
                        android:layout_width="@dimen/width57"
                        android:layout_height="@dimen/width57"
                        android:background="@drawable/input_box_2"/>
                    <TextView
                        android:id="@+id/alarm_num_four"
                        android:textSize="@dimen/width40"
                        android:gravity="center"
                        android:password="true"
                        android:layout_marginLeft="@dimen/width16"
                        android:layout_width="@dimen/width57"
                        android:layout_height="@dimen/width57"
                        android:background="@drawable/input_box_2"/>
                </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/width523"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <GridView
                android:id="@+id/alarm_input_keyboard"
                android:numColumns="3"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/width100"
                android:horizontalSpacing="@dimen/width25"
                android:verticalSpacing="@dimen/width20"
                android:layout_width="@dimen/width278"
                android:layout_height="@dimen/width364"
                android:listSelector="#00000000"
                ></GridView>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>