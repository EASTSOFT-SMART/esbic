<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/width1000"
        android:layout_height="@dimen/width400"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="@dimen/width1000"
            android:layout_height="@dimen/width130"
            android:layout_marginTop="@dimen/width40"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="回家"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="回家"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="离家"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:text="会客"
                android:textSize="@dimen/textsize30"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/width1000"
            android:layout_height="@dimen/width130"
            android:layout_marginTop="@dimen/width60"
            android:layout_gravity="center">
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="节能"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="睡觉"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="看电影"
                android:textSize="@dimen/textsize30"
                />
            <Button
                android:layout_width="@dimen/width200"
                android:layout_height="@dimen/width130"
                android:layout_marginLeft="@dimen/width40"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Party"
                android:textSize="@dimen/textsize30"
                />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>