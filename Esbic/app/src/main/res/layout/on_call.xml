<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width93"
        android:background="@drawable/top_bg">
        <ImageButton
            android:id="@+id/on_call_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width50"
            android:layout_width="@dimen/width36"
            android:layout_height="@dimen/width81"
            android:background="@drawable/top_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/text_25_ffffff"
            android:text="返回"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/width751"
            android:layout_height="@dimen/width526"
            android:layout_marginLeft="@dimen/width61"
            android:layout_gravity="center"
            android:background="@drawable/video_bg">
            <SurfaceView
                android:id="@+id/on_call_player"
                android:layout_width="@dimen/width700"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width411"
            android:layout_height="@dimen/width441"
            android:layout_gravity="center"
            android:background="@drawable/right_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/on_call_addr_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width62"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/text_36_ffffff"
                android:text="5号楼6单元"/>

            <TextView
                android:id="@+id/on_call_addr_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/width24"
                style="@style/text_36_ffffff"
                android:text="9号门口机呼叫"/>

            <Button
                android:id="@+id/on_call_accept"
                android:layout_width="@dimen/width203"
                android:layout_height="@dimen/width46"
                android:layout_marginTop="@dimen/width50"
                android:layout_gravity="center"
                android:background="@drawable/accept"
                style="@style/text_23_ffffff"
                android:paddingLeft="@dimen/width40"
                android:text="接听"/>
            <Button
                android:id="@+id/on_call_hang_up"
                android:layout_width="@dimen/width203"
                android:layout_height="@dimen/width46"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/width25"
                android:paddingLeft="@dimen/width40"
                android:background="@drawable/hangup_bg"
                style="@style/text_23_ffffff"
                android:text="挂断"/>
            <Button
                android:id="@+id/on_call_unlock"
                android:layout_width="@dimen/width203"
                android:layout_gravity="center"
                android:layout_height="@dimen/width46"
                android:layout_marginTop="@dimen/width25"
                android:paddingLeft="@dimen/width40"
                android:background="@drawable/unlock"
                style="@style/text_23_ffffff"
                android:text="开锁"/>

        </LinearLayout>
   
        
    </LinearLayout>



</LinearLayout>