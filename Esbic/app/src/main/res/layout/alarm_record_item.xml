<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/width1200"
        android:layout_height="@dimen/width130"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/alarm_icon"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width100"
            android:layout_marginLeft="@dimen/width50"
            android:layout_gravity="center"
            android:background="#00ccdd"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/width100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/alarm_type"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width65"
                android:textSize="@dimen/textsize27"
                android:text="没有报警信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width65"
                >
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width150"
                    android:layout_height="@dimen/width65"
                    android:text="报警时间:"
                    android:textSize="@dimen/textsize27"/>
                <TextView
                    android:id="@+id/alarm_time"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width200"
                    android:layout_height="@dimen/width65"
                    android:textSize="@dimen/textsize27"
                    android:text="2016.01.26"/>
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width150"
                    android:layout_height="@dimen/width65"
                    android:textSize="@dimen/textsize27"
                    android:text="处理时间:"/>
                <TextView
                    android:id="@+id/alarm_handle_time"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/width200"
                    android:layout_height="@dimen/width65"
                    android:textSize="@dimen/textsize27"
                    android:text="2016.01.26"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>