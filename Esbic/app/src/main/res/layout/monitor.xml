<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@drawable/home_top_bg"
        >
        <ImageButton
            android:id="@+id/monitor_back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width75"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width35"
            android:background="@drawable/top_back"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <SurfaceView
                android:layout_gravity="center"
                android:id="@+id/monitor_place"
                android:layout_marginLeft="@dimen/width75"
                android:layout_width="@dimen/width600"
                android:layout_height="@dimen/width500" />




            <GridView
                android:id="@+id/exchange_monitor"
                android:layout_width="@dimen/width400"
                android:layout_marginLeft="@dimen/width75"
                android:layout_gravity="center"
                android:numColumns="2"
                android:layout_height="@dimen/width400"></GridView>


    </LinearLayout>


</LinearLayout>