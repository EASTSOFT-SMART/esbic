<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/callmanagement_bg1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@drawable/home_top_bg"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width75"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width35"
            android:background="@drawable/top_back"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/width500"
            android:layout_marginLeft="@dimen/width100"
            android:layout_height="@dimen/width600"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/width150"
                android:id="@+id/conversation_state"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width100"
                android:textSize="@dimen/textsize30"
                android:text="正在呼叫"/>
            <TextView
                android:id="@+id/conversation_going"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize30"
                android:layout_height="@dimen/width100"
                android:text="正在和XXX通话"/>
            <TextView
                android:id="@+id/conversation_time"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize30"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_height="@dimen/width100"
                android:text="00:00"/>
        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/width500"
            android:layout_marginLeft="@dimen/width100"
            android:layout_height="@dimen/width600"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/conversation_hang_up"
                android:layout_width="@dimen/width300"
                android:layout_marginTop="@dimen/width250"
                android:layout_gravity="center"
                android:layout_height="@dimen/width80"
                android:background="@drawable/hangup_bg"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>