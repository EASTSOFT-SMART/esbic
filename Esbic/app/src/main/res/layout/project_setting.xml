<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_7"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width93"
        android:background="@drawable/top_bg_2">

        <ImageButton
            android:id="@+id/project_setting_back"
            android:layout_width="@dimen/width36"
            android:layout_height="@dimen/width81"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width50"
            android:background="@drawable/top_back"/>

        <TextView
            android:id="@+id/project_setting_back2"
            style="@style/text_25_ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="返回"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width8"
        android:background="@drawable/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width104"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="设备地址"/>

                <EditText
                    android:id="@+id/project_setting_device_address"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="14"
                    android:text="05楼05单元05层05房间"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ip"
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="IP"/>

                <EditText
                    android:id="@+id/project_setting_ip"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="15"
                    android:text="192.168.001.211"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subnet_mask"
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="子网掩码 "/>

                <EditText
                    android:id="@+id/project_setting_subnet_mask"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="15"
                    android:text="255.255.255.000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gateway"
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="网关"/>

                <EditText
                    android:id="@+id/project_setting_gateway"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="15"
                    android:text="192.168.001.254"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/server"
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="服务器"/>

                <EditText
                    android:id="@+id/project_setting_imp_server"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="15"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/center_management"
                    style="@style/text_22_ffffff"
                    android:layout_width="@dimen/width198"
                    android:layout_height="@dimen/width65"
                    android:background="@drawable/words_bg"
                    android:gravity="center"
                    android:text="中心管理机"/>

                <EditText
                    android:id="@+id/project_setting_center_management"
                    style="@style/text_22_000000"
                    android:layout_width="@dimen/width497"
                    android:layout_height="@dimen/width66"
                    android:layout_marginLeft="@dimen/width12"
                    android:background="@drawable/input_box_3"
                    android:gravity="center"
                    android:maxLength="15"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width278"
            android:layout_height="@dimen/width364"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width100"
            android:orientation="vertical">

            <GridView
                android:id="@+id/project_setting_input_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/width25"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:verticalSpacing="@dimen/width20"></GridView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>