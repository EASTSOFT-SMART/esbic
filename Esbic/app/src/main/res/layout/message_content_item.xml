<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/width304"
        android:layout_height="@dimen/width75"
        android:background="@drawable/message_item_selected"
        android:orientation="horizontal">

          <ImageView
              android:id="@+id/read_status"
              android:layout_gravity="center"
              android:layout_width="@dimen/width57"
              android:layout_height="@dimen/width57"
              android:background="@drawable/msg_unread"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/width16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_content"
                android:layout_gravity="center|left"
                style="@style/text_26_ffffff"
                android:gravity="left"
                android:layout_marginTop="@dimen/width8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交物业费"/>
            <TextView
                android:id="@+id/message_time"
                android:layout_gravity="center|left"
                style="@style/text_18_ffffff"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-02-14 15:00:01"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>