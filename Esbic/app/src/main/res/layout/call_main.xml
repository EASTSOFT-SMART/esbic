<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/callmanagement_bg1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@drawable/home_top_bg"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width75"
            android:layout_width="@dimen/width100"
            android:layout_height="@dimen/width35"
            android:background="@drawable/top_back"/>

    </LinearLayout>

    <!--第二部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="@dimen/width1000"
            android:layout_height="@dimen/width550"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/callmanagement_bg2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/width500"
                android:layout_height="@dimen/width550"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/hostory_list"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/width40"
                    android:layout_width="@dimen/width450"
                    android:layout_height="@dimen/width485"/>
                <LinearLayout
                    android:id="@+id/control_help"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/width380"
                    android:layout_height="@dimen/width415"
                    android:layout_marginTop="@dimen/width70"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width80"
                        android:textSize="35sp"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:text="使用方法："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width50"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:text="②楼栋号+单元号+楼层号"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width50"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="@dimen/width30"
                        android:text="+房间号"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width50"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:text="①楼层号+房间号"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/width500"
                    android:layout_height="@dimen/width65"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/hository"
                        android:layout_width="@dimen/width245"
                        android:layout_height="@dimen/width65"
                        android:background="@drawable/call_history_record"/>
                    <ImageButton
                        android:id="@+id/help"
                        android:layout_width="@dimen/width245"
                        android:layout_height="@dimen/width65"
                        android:background="@drawable/operation_help"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/width500"
                android:layout_height="@dimen/width550"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="@dimen/width300"
                    android:layout_height="@dimen/width75"
                    android:layout_marginTop="@dimen/width40"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/input_box">
                    <TextView
                        android:id="@+id/tel_number"
                        android:textSize="25sp"
                        android:gravity="center|left"
                        android:text=""
                        android:layout_gravity="center"
                        android:layout_width="@dimen/width260"
                        android:layout_height="@dimen/width75"
                        />
                </LinearLayout>


                <GridView
                    android:id="@+id/input_board"
                    android:layout_marginTop="@dimen/width20"
                    android:layout_width="@dimen/width300"
                    android:numColumns="3"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/width330"></GridView>

                <ImageButton
                    android:id="@+id/call"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/width250"
                    android:layout_height="@dimen/width65"
                    android:layout_marginTop="@dimen/width20"
                    android:background="@drawable/call_resident"/>

            </LinearLayout>

        </LinearLayout>
        </RelativeLayout>




</LinearLayout>