<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/width348"
        android:layout_height="@dimen/width90"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/call_other_record_icon"
                android:layout_width="@dimen/width58"
                android:layout_height="@dimen/width58"
                android:background="@drawable/call_in_default"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/call_other_record_device"
                style="@style/text_26_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width14"
                android:gravity="center|left"
                android:text="05楼05单元05层05房间"/>

            <TextView
                android:id="@+id/call_other_record_time"
                style="@style/text_18_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width4"
                android:gravity="center|left"
                android:text="2016年1月1日 12:10:10"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>