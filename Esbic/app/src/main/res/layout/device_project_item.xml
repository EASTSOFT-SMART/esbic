<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/width950"
        android:layout_height="@dimen/width80"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/infomation_name"
            android:gravity="center"
            android:layout_width="@dimen/width200"
            android:layout_height="@dimen/width80"
            android:textSize="@dimen/textsize33"
            android:text="名称"/>
        <TextView
            android:id="@+id/infomation_number"
            android:gravity="center"
            android:layout_width="@dimen/width750"
            android:layout_height="@dimen/width80"
            android:textSize="@dimen/textsize33"
            android:text="1111111111111"/>

    </LinearLayout>

</RelativeLayout>