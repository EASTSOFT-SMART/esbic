<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_7">
    <LinearLayout
        android:id="@+id/weather_setting_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width93"
        android:background="@drawable/top_bg_2">
        <ImageButton
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width50"
            android:layout_width="@dimen/width36"
            android:layout_height="@dimen/width81"
            android:clickable="false"
            android:background="@drawable/top_back" />
        <TextView
            android:id="@+id/date_setting_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/text_25_ffffff"
            android:text="返回"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/width9"
        android:background="@drawable/line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width53"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city_setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_64_ffffff"
            android:layout_gravity="bottom"
            android:text="青岛"
            />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/width90"
            android:layout_marginLeft="@dimen/width29"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width25"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weater_setting_icon"
                android:layout_width="@dimen/width77"
                android:layout_height="@dimen/width56"
                android:layout_gravity="center"
                android:background="@drawable/weather_s_1"/>

            <TextView
                android:id="@+id/weater_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_30_ffffff"
                android:layout_gravity="center"
                android:text="晴"/>

        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/width90"
            android:layout_marginLeft="@dimen/width26"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width29"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width5"
                style="@style/text_30_ffffff"
                android:text="1℃~5℃"/>

            <TextView
                android:id="@+id/wind_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width15"
                style="@style/text_30_ffffff"
                android:text="西北风3-5级"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/width1026"
        android:layout_height="@dimen/width48"
        android:layout_marginTop="@dimen/width43"
        android:layout_gravity="center"
        android:background="@drawable/weater_setting_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width205"
            style="@style/text_24_20A683"
            android:text="选择省份"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/width420"
            style="@style/text_24_20A683"
            android:text="选择城市"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width7">

        <ListView
            android:id="@+id/pro_list"
            android:layout_width="@dimen/width509"
            android:layout_height="@dimen/width400"></ListView>

        <ListView
            android:id="@+id/city_list"
            android:layout_width="@dimen/width509"
            android:layout_marginLeft="@dimen/width9"
            android:layout_height="@dimen/width400"></ListView>

    </LinearLayout>


</LinearLayout>